{
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "outputDirectory": "build"
      }
    },
    {
      "src": "server/server.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/server/server.js"
    },
    {
      "source": "/static/(.*)",
      "destination": "/client/build/static/$1"
    },
    {
      "source": "/(.*\\.(png|jpg|jpeg|gif|svg|ico|webp|woff|woff2|ttf|eot|json|txt|xml))",
      "destination": "/client/build/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/client/build/index.html"
    }
  ]
}