{
  "buildCommand": "./build.sh",
  "outputDirectory": "client/build",
  "framework": "create-react-app",
  "headers": [
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://trailverse.onrender.com/api/$1"
    },
    {
      "source": "/((?!api/|static/).*)",
      "destination": "/index.html"
    }
  ]
}
